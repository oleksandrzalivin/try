<script id="tableTemplateCategory" type="text/template">
    <table class="table"> <!-- Таблиця -->
        <thead>
            <tr>
				 <th colspan="7"><a href="<%= href %>"><%= name %></a></th>
            </tr>
	    </thead>
        <tbody>
		      <tr>
                 <% if(codeRef) { %>
                 <td><a data-id="<%= _id %>" href='<%= href %>'><%= codeID %></a></td>
                 <% } else { %>
                 <td><%= codeID %></td>
                 <% } %>
                 <td><img src='<%= photo %>' /></td>
                 <td><%= name %></td>
                 <td><%= sort %></td>
                 <td><%= harvest %></td>
                 <td><%= date %></td>
                 <td><%= cost %></td>
              </tr>
        </tbody>
    </table>
</script>

